<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_weight="2"
    android:background="@color/appBaseColor"
    android:layout_height="match_parent">
    <FrameLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:background="@color/pureBlack"
            android:layout_margin="20dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:text="Video"
                android:textColor="#fff"
                android:textStyle="bold"
                android:textSize="24sp"
                android:layout_margin="25dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"></TextView>
            <ImageView
                android:layout_margin="20dp"
                android:scaleType="fitXY"
                android:id="@+id/MD_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            </ImageView>



        </RelativeLayout>
    </FrameLayout>
    <FrameLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:padding="25dp"
                android:textSize="16sp"
                android:gravity="center"
                android:text="Brief explanation of selected mobility, followed by steps to perform each movement."
                android:id="@+id/MD_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            </TextView>




        </RelativeLayout>
    </FrameLayout>
</LinearLayout>