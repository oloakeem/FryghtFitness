<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
<TextView
    android:id="@+id/SHHeader"
    android:layout_marginTop="100dp"
    android:layout_centerHorizontal="true"
    android:text="Welcome!"
    android:textSize="24sp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"></TextView>
    <TextView
        android:layout_marginTop="25dp"
        android:layout_below="@id/SHHeader"
        android:id="@+id/SHSubHeader"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:text="Here you can sign in as a member."
        android:layout_width="200dp"
        android:textSize="16sp"
        android:layout_height="wrap_content">
    </TextView>

    <EditText
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:layout_centerInParent="true"
        android:id="@+id/SHUserName"
        android:hint="Email"
        android:layout_width="match_parent"
        android:layout_height="50dp"></EditText>
    <EditText
        android:layout_marginTop="5dp"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:id="@+id/SHPassword"
        android:layout_below="@id/SHUserName"
        android:hint="Password"
        android:layout_width="match_parent"
        android:layout_height="50dp"></EditText>
    <TextView
        android:layout_marginTop="3dp"
        android:layout_marginLeft="30dp"
        android:layout_below="@id/SHPassword"
        android:text="Forgot password?"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"></TextView>
    <Button
        android:padding="5dp"
        android:background="@drawable/cc_buttons"
        android:textColor="@color/appBaseColor"
        android:layout_marginTop="25dp"
        android:layout_marginRight="30dp"
        android:layout_alignParentRight="true"
        android:layout_below="@id/SHPassword"
        android:id="@+id/SHSignIn"
        android:text="Sign in"
        android:layout_width="wrap_content"
        android:layout_height="35dp"></Button>

    <FrameLayout
        android:layout_marginTop="25dp"
        android:layout_below="@id/SHSignIn"
        android:layout_centerHorizontal="true"
        android:id="@+id/SHFrameBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_marginTop="25dp"
                android:textAlignment="center"
                android:text="New user? "
                android:id="@+id/SHSignupText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </TextView>
            <TextView
                android:textStyle="bold"
                android:textColor="@color/lightBlue"
                android:layout_marginTop="25dp"
                android:layout_toRightOf="@id/SHSignupText"
                android:textAlignment="center"
                android:text="Register now."
                android:id="@+id/SHReigster"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"></TextView>

        </RelativeLayout>

    </FrameLayout>

    <Button
        android:padding="5dp"
        android:textColor="@color/appBaseColor"
        android:background="@drawable/cc_buttons"
        android:layout_margin="25dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:id="@+id/SHGuest"
        android:text="Continue as guest"
        android:layout_width="wrap_content"
        android:layout_height="35dp"></Button>

</RelativeLayout>