<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <layer-list>
            <item>
                <shape>
                    <gradient
                        android:startColor="#343434"
                        android:endColor="#171717"
                        android:angle="270" />
                    <stroke
                        android:width="1dp"
                        android:color="#ffffff" />
                    <corners
                        android:radius="10dp" />
                    <padding
                        android:left="6dp"
                        android:top="6dp"
                        android:right="6dp"
                        android:bottom="6dp" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>